<p id="notice"><%= notice %></p>

<h1>Listing Tools</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Layer</th>
      <th>Api</th>
      <th>Name</th>
      <th>Slug</th>
      <th>Popularity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tools.each do |tool| %>
      <tr>
        <td><%= tool.layer %></td>
        <td><%= tool.api_id %></td>
        <td><%= tool.name %></td>
        <td><%= tool.slug %></td>
        <td><%= tool.popularity %></td>
        <td><%= link_to 'Show', tool %></td>
        <td><%= link_to 'Edit', edit_tool_path(tool) %></td>
        <td><%= link_to 'Destroy', tool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tool', new_tool_path %>
